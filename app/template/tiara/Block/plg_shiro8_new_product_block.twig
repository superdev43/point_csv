<!-- ▼shiro8_new_product▼ -->
<div id="top_new_item">
<div id="contents_top">
    <div id="item_list" class="inner">
	<h2><img src="/img/home/h_new_item.png" alt="新着商品" /></h2>
        <ul>
            {% if Products|length > 0 %}
                {% for Product in Products|slice(0,5) %}
                    <li class="col-xs-6">
                        <div class="pickup_item">
                            <a href="{{ url('product_detail', {'id': Product.id}) }}">
                                <div class="item_photo match_height">
                                    <img src="{{ app.config.image_save_urlpath }}/{{ Product.main_list_image|no_image_product }}">
                                </div>
                                {% if Product.description_list %}
                                    <p class="item_comment text-warning none">{{ Product.description_list|raw|nl2br }}</p>
                                {% endif %}
                                <p class="item_name product_name">{{ Product.name }}</p>
                                    
                                    {% if Product.hasProductClass %}
                                        {% if Product.getPrice02Min == Product.getPrice02Max %}
                                            <p class="price item_price">{{ Product.getPrice02IncTaxMin|price }}</p>
                                        {% else %}
                                            <p class="price item_price">{{ Product.getPrice02IncTaxMin|price }} ～ {{ Product.getPrice02IncTaxMax|price }}</p>
                                        {% endif %}
                                    {% else %}
                                        <p class="price item_price">{{ Product.getPrice02IncTaxMin|price }}</p>
                                    {% endif %}
                            </a>
                        </div>
                    </li>
                {% endfor %}
            {% endif %}
        </ul>
    </div>
</div>
</div>
