<script>
$(function() {
	$('#top_product_tab .select_area li img').mouseover(function() {
		if($(this).hasClass('current') ) {

		}else{
			$(this).attr('src', $(this).attr('src').replace('_off', '_on')).addClass('active');
		}
	});

	$('#top_product_tab .select_area li img').mouseleave(function() {
		if($(this).hasClass('current') ) {

		}else{
			$(this).attr('src', $(this).attr('src').replace('_on', '_off')).removeClass('active');
		}
	});

	$('#top_product_tab .select_area li img').click(function() {
		var index = $('#top_product_tab .select_area li img').index(this);
		$('#top_product_tab .select_area li img').removeClass('current');
		$(this).attr('src', $(this).attr('src').replace('_off', '_on')).addClass('current');
		$('#top_product_tab .select_area li img').each(function() {
			if($(this).hasClass('current')) {

			}else{
				$(this).attr('src', $(this).attr('src').replace('_on', '_off')).removeClass('active');
			}
		});


		$('#top_product_tab .tab_box').hide();
		$('#top_product_tab .tab_box').eq(index).fadeIn();
	});
});
</script>

