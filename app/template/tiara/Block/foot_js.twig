<script>
$(function() {
	$('#gnav .btn_search span').click(function() {
		$('.search_tgl').toggleClass('active');
		$('#search').toggleClass('active');
	});
	$('#gnav .btn_ac').mouseover(function() {
		var index = $('#gnav .btn_ac').index(this);
		$('#gnav ul.lv2').eq(index).stop(false,true).fadeIn();
	});
	$('#gnav .btn_ac').mouseleave(function() {
		var index = $('#gnav .btn_ac').index(this);
		$('#gnav ul.lv2').eq(index).stop(false,true).hide();
	});
});
</script>

