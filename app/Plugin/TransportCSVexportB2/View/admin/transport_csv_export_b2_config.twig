{% extends 'default_frame.twig' %}

{% block javascript %}
    <script type="text/javascript">

    </script>
{% endblock %}

{% block title %}{{ tpl_subtitle }}{% endblock %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}
{% block main %}

    <div class="row" id="aside_wrap">
        <form name="form1" role="form" novalidate class="form-horizontal" id="point_form" method="post" action="">
            {{ form_widget(form._token) }}
            <div class="col-md-9">

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">ヤマト運輸B2</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-2 control-label required">ご請求先顧客コード</label>

                            <div class="col-sm-10 {% if form.billing_code.vars.errors is not empty %}has-error{% endif %}">
                                {{ form_widget(form.billing_code) }}
                                {{ form_errors(form.billing_code) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label required">運賃管理番号</label>

                            <div class="col-sm-10 {% if form.fare_number.vars.errors is not empty %}has-error{% endif %}">
                                {{ form_widget(form.fare_number) }}
                                {{ form_errors(form.fare_number) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label required">送り状種別<br>クール区分</label>

                            <div class="col-sm-10 {% if form.yamato_deliv_type.vars.errors is not empty %}has-error{% endif %}">
                                {{ form_widget(form.yamato_deliv_type) }}
                                {{ form_errors(form.yamato_deliv_type) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">コレクト設定</h3>
                        <p class="small">CSV出力時に選択した支払い方法をコレクトとして扱います。通常は代金引換を選択してください。</p>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        {% for key, item in paymentData %}
                        <div class="form-group">
                            <label class="col-sm-2 control-label required">{{ item.pm }}</label>

                            <div class="col-sm-10 {% if form[item.name].vars.errors is not empty %}has-error{% endif %}">
                                {{ form_widget(form[item.name]) }}
                                {{ form_errors(form[item.name]) }}
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">対応状況変更設定</h3>
                        <p class="small">CSV出力時に選択した対応状況を【発送済み】に変更します。</p>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-2 control-label required">対応状況</label>

                            <div class="col-sm-10 {% if form.order_status.vars.errors is not empty %}has-error{% endif %}">
                                {{ form_widget(form.order_status) }}
                                {{ form_errors(form.order_status) }}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-3" id="aside_column">
                <div class="col_inner">
                    <div class="box no-header">
                        <div class="box-body">
                            <div class="row text-center">
                                <div class="col-sm-6 col-sm-offset-3 col-md-12 col-md-offset-0">
                                    <button class="btn btn-primary btn-block btn-lg" onclick="document.form1.submit();">
                                        この内容で登録する
                                    </button>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            </div>
            <!-- /.col -->
        </form>
    </div>

{% endblock %}
